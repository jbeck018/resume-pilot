{
  "name": "howlerhire",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "node scripts/run-migrations.js && vite build",
    "build:no-migrate": "vite build",
    "db:migrate:build": "node scripts/run-migrations.js",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:run": "npx tsx scripts/run-migration.ts",
    "inngest:dev": "npx inngest-cli@latest dev",
    "prompts:seed": "npx tsx src/lib/server/llm/prompts/seed-prompts.ts",
    "docker:dev": "docker-compose up -d",
    "docker:dev:build": "docker-compose up -d --build",
    "docker:dev:logs": "docker-compose logs -f app",
    "docker:dev:down": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:build": "docker build -t howlerhire:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env howlerhire:latest"
  },
  "devDependencies": {
    "@sveltejs/adapter-cloudflare": "^5.0.0",
    "@sveltejs/adapter-node": "^5.2.0",
    "@sveltejs/kit": "^2.15.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@types/node": "^22.10.0",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.30.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-svelte": "^2.46.0",
    "globals": "^15.14.0",
    "pg": "^8.17.2",
    "postcss": "^8.5.1",
    "prettier": "^3.4.0",
    "prettier-plugin-svelte": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "svelte": "^5.19.0",
    "svelte-check": "^4.1.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.7.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.1.0",
    "@ai-sdk/google": "^1.1.0",
    "@ai-sdk/mcp": "^1.0.10",
    "@ai-sdk/openai": "^1.1.0",
    "@fontsource-variable/fira-code": "^5.2.7",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@sentry/sveltekit": "^10.36.0",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.49.0",
    "@upstash/redis": "^1.36.1",
    "ai": "^4.1.0",
    "bits-ui": "^1.0.0-next.78",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.39.0",
    "fast-xml-parser": "^5.3.3",
    "inngest": "^3.31.0",
    "langfuse": "^3.32.0",
    "lucide-svelte": "^0.469.0",
    "mammoth": "^1.11.0",
    "mode-watcher": "^0.5.1",
    "postgres": "^3.4.5",
    "resend": "^6.8.0",
    "stripe": "^17.5.0",
    "svelte-sonner": "^0.3.28",
    "tailwind-merge": "^2.6.0",
    "tailwind-variants": "^0.3.1",
    "zod": "^3.24.1"
  }
}
